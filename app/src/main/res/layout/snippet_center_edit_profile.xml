<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clipToPadding="false"
        android:padding="20dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_face_black_24dp"
            app:civ_border_color="@color/black"
            app:civ_border_width="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/changeProfilePhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_photo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:text="@string/change_photo"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:theme="@style/Widget.MaterialComponents.Button.TextButton.Dialog"
            app:rippleColor="@color/colorPrimary"
            app:strokeColor="@color/colorPrimary"
            app:strokeWidth="1dp" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/name_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/changeProfilePhoto"
            android:layout_margin="8dp"
            app:hintTextAppearance="@style/MyStyle.InputLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:enabled="false"
                android:foreground="@drawable/primary_ripple"
                android:hint="Display Name"
                android:inputType="textNoSuggestions"
                android:theme="@style/MyTheme.EditText" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/website_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_til"
            android:layout_margin="8dp"
            app:hintTextAppearance="@style/MyStyle.InputLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:enabled="false"
                android:foreground="@drawable/primary_ripple"
                android:hint="Website"
                android:inputType="textNoSuggestions"
                android:theme="@style/MyTheme.EditText" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/description_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/website_til"
            android:layout_margin="8dp"
            app:hintTextAppearance="@style/MyStyle.InputLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:enabled="false"
                android:foreground="@drawable/primary_ripple"
                android:hint="Description"
                android:inputType="textNoSuggestions"
                android:theme="@style/MyTheme.EditText" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mail_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/description_til"
            android:layout_margin="8dp"
            app:hintTextAppearance="@style/MyStyle.InputLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:enabled="false"
                android:foreground="@drawable/primary_ripple"
                android:hint="Email"
                android:inputType="textNoSuggestions"
                android:theme="@style/MyTheme.EditText" />
        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/backFabProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_arrow_back_black_24dp"
            app:rippleColor="@color/colorPrimary" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/updFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_edit_black_24dp"
            app:rippleColor="@color/colorPrimary" />
    </RelativeLayout>

</merge>